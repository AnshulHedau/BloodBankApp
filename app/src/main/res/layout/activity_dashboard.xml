<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="anshul.software_project.Dashboard">

    <TextView
        android:id="@+id/usernamedisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <Button
        android:id="@+id/dsearch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openSearch"
        android:text="SEARCH DONERS" />

    <Button
        android:id="@+id/dedit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openEditProfile"
        android:text="EDIT PROFILE" />

    <Button
        android:id="@+id/ddelete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="deleteAccount"
        android:text="DELETE ACCOUNT" />

    <Button
        android:id="@+id/dlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="userLogout"
        android:text="LOGOUT" />

</LinearLayout>
