<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="anshul.software_project.AboutUs">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="30dp"
        android:text="About Us"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="This is to certify that the project work titled “Blood Bank Android Application” that is being submitted by Valmeekam Karthik,Aman Mangal, Anshul Hedau, Dheeraj Nair for the Software Engeenering(CSE3001) is a record of bona fide work done under supervision of Prabhu S. The contents of this project work, in full or in parts, have neither been taken from any source, nor have been submitted for any other CAL course.  "
        android:textAlignment="center"
        android:textColor="@color/tan_background"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="We are a no profit host.Hence for the add free and uninterupted service we accepts the donations from the users for this noble cause."
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:text="Donate"
        android:textColor="@color/tan_background"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:onClick="goback"
        android:text="Go to Home Page"
        android:textColor="@color/tan_background"
        android:textSize="18sp" />
</LinearLayout>
