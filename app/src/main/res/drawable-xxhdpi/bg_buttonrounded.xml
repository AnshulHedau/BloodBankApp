<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <corners android:radius="500dp" />

            <gradient android:angle="90" android:endColor="#caeeefef" android:gradientRadius="80dp" android:startColor="#c900c85a" android:type="linear" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <corners android:radius="500dp" />
            <gradient android:angle="90" android:endColor="#eeefef" android:gradientRadius="80dp" android:startColor="#06ea6d" android:type="linear" />

        </shape>
    </item>

</selector>