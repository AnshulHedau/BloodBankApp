<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <corners android:radius="500dp" />

            <gradient android:angle="90" android:endColor="#c6eeefef" android:gradientRadius="80dp" android:startColor="#de7dec5b" android:type="linear" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <corners android:radius="5dp" />
            <gradient android:angle="90" android:endColor="#eeefef" android:gradientRadius="80dp" android:startColor="#22ec25" android:type="linear" />

        </shape>
    </item>

</selector>